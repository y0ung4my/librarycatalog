@{
  Layout = "_Layout";
}

@model LibraryCatalog.Models.Book

<h4>Add a new book</h4>
<div>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.PublishDate, "Publish Date")
  @Html.TextBoxFor(model => model.PublishDate)

  @Html.Label("Select author")
  @Html.DropDownList("AuthorId")

  @Html.Label("Select genre")
  @Html.DropDownList("GenreId")

  <label for="Copies">Copies:</label>
  <input type="number" id="Copies" name="Copies">

  <input type="submit" value="Add new book" />
}
</div>
<p>@Html.ActionLink("Show all books", "Index")</p>